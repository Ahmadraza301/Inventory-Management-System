# Production Environment Variables
# Copy this file to .env and update with your production values

# Django Configuration
SECRET_KEY=your-super-secure-secret-key-here-50-characters-long
DEBUG=False
DJANGO_SETTINGS_MODULE=inventory_system.production_settings

# Domain Configuration
ALLOWED_HOSTS=yourdomain.com,www.yourdomain.com,your-app.herokuapp.com
CORS_ALLOWED_ORIGINS=https://yourdomain.com,https://www.yourdomain.com

# Database Configuration (PostgreSQL recommended for production)
DATABASE_URL=postgresql://username:password@hostname:port/database_name

# Alternative database configuration
DB_NAME=inventory_db_prod
DB_USER=inventory_user
DB_PASSWORD=secure_password_here
DB_HOST=your-database-host.com
DB_PORT=5432
USE_POSTGRES=True

# Email Configuration (Optional)
EMAIL_BACKEND=django.core.mail.backends.smtp.EmailBackend
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USE_TLS=True
EMAIL_HOST_USER=your-email@gmail.com
EMAIL_HOST_PASSWORD=your-app-password

# Redis Configuration (Optional - for caching)
REDIS_URL=redis://your-redis-host:6379/0

# File Upload Settings
MAX_UPLOAD_SIZE=5242880

# Session Settings
SESSION_COOKIE_AGE=3600

# Security Settings (automatically handled in production_settings.py)
SECURE_SSL_REDIRECT=True
SESSION_COOKIE_SECURE=True
CSRF_COOKIE_SECURE=True